<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProviderScreen">

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="WELCOME TO MUMBAI NOSH"
        android:gravity="center"
        android:background="#FFBC40"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeading"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvOrganizationNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organization's Name :"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etOrganizationName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:hint="Enter Organization Name"
            android:padding="10dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvOrganizationAddressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organization's Address :"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etOrganizationAddress"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:hint="Enter Organization Address"
            android:padding="10dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvOrganizationTimingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organization's Timing :"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etOrganizationTiming"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:hint="ex : 2pm or 2 am "
            android:padding="10dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvOrganizationPinCodeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organization's Pin-Code :"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etOrganizationPinCode"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:hint="Enter Pin-Code"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:inputType="number" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="OnProviderSubmit"
            android:text="Submit" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
